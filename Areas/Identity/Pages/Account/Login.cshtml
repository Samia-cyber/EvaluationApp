@page
@using WebApplication1.Areas.Identity.Pages.Account
@model LoginModel
@{
    ViewData["Title"] = "Connexion";
}

<style>
    body {
        background: linear-gradient(135deg, #f8fafc 0%, #e0f2fe 100%);
        min-height: 100vh;
    }

    .login-container {
        min-height: calc(100vh - 200px);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
    }

    .login-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.1);
        padding: 3rem;
        width: 100%;
        max-width: 450px;
    }

    .login-header {
        text-align: center;
        margin-bottom: 2rem;
    }

        .login-header::before {
            content: 'üîê';
            display: block;
            width: 70px;
            height: 70px;
            background: linear-gradient(135deg, #10b981, #059669);
            border-radius: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
            font-size: 2rem;
            line-height: 70px;
            text-align: center;
        }

        .login-header h1 {
            font-size: 2rem;
            font-weight: 800;
            color: #1e293b;
            margin-bottom: 0.5rem;
        }

    .login-subtitle {
        color: #64748b;
        font-size: 1rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        display: block;
        font-weight: 600;
        color: #374151;
        margin-bottom: 0.5rem;
        font-size: 0.95rem;
    }

    .form-control {
        width: 100%;
        padding: 0.875rem 1rem;
        border: 2px solid #e5e7eb;
        border-radius: 10px;
        font-size: 1rem;
        transition: all 0.2s;
        outline: none;
    }

        .form-control:focus {
            border-color: #10b981;
            box-shadow: 0 0 0 3px rgba(16, 185, 129, 0.1);
        }

    .form-check {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 1.5rem;
    }

    .form-check-input {
        width: 18px;
        height: 18px;
        cursor: pointer;
    }

    .form-check-label {
        color: #64748b;
        cursor: pointer;
    }

    .btn-primary {
        width: 100%;
        padding: 1rem;
        background: linear-gradient(135deg, #10b981, #059669);
        color: white;
        border: none;
        border-radius: 10px;
        font-weight: 700;
        font-size: 1.05rem;
        cursor: pointer;
        transition: all 0.3s;
        box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(16, 185, 129, 0.4);
        }

    .login-footer {
        text-align: center;
        margin-top: 2rem;
        padding-top: 2rem;
        border-top: 1px solid #e5e7eb;
    }

        .login-footer p {
            margin-bottom: 0.75rem;
            color: #64748b;
        }

    .login-link {
        color: #10b981;
        font-weight: 600;
        text-decoration: none;
        transition: color 0.2s;
    }

        .login-link:hover {
            color: #059669;
        }

    .text-danger {
        color: #ef4444;
        font-size: 0.875rem;
        margin-top: 0.25rem;
        display: block;
    }

    .validation-summary-errors {
        background: #fee2e2;
        border: 1px solid #fecaca;
        color: #dc2626;
        padding: 1rem;
        border-radius: 8px;
        margin-bottom: 1.5rem;
    }
</style>

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <h1>Connexion</h1>
            <p class="login-subtitle">Acc√©dez √† votre compte HireDesk</p>
        </div>

        <form method="post" class="login-form">
            <div asp-validation-summary="ModelOnly" class="text-danger validation-summary-errors"></div>

            <div class="form-group">
                <label asp-for="Input.Email" class="form-label">Email</label>
                <input asp-for="Input.Email" class="form-control" type="email" placeholder="votre@email.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Password" class="form-label">Mot de passe</label>
                <input asp-for="Input.Password" class="form-control" type="password" placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-check">
                <input type="checkbox" class="form-check-input" asp-for="Input.RememberMe" id="rememberMe" />
                <label class="form-check-label" asp-for="Input.RememberMe" for="rememberMe">
                    Se souvenir de moi
                </label>
            </div>

            <button type="submit" class="btn btn-primary btn-block">
                Se connecter ‚Üí
            </button>
        </form>

        <div class="login-footer">
            <p>
                Pas encore de compte ?
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="login-link">S'inscrire</a>
            </p>
            <p>
                <a asp-page="./ForgotPassword" class="login-link">Mot de passe oubli√© ?</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
