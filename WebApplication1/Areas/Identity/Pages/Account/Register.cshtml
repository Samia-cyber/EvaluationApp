@page
@using PlateformeEvaluation.Areas.Identity.Pages.Account
@model RegisterModel
@{
    ViewData["Title"] = "Créer un compte";
}

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <h1>Créer un compte</h1>
            <p class="login-subtitle">Inscrivez-vous pour accéder à EvalPro</p>
        </div>

        <form method="post" class="login-form">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Input.Email" class="form-label">Email</label>
                <input asp-for="Input.Email" class="form-control" placeholder="Votre email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Password" class="form-label">Mot de passe</label>
                <input asp-for="Input.Password" class="form-control" type="password" placeholder="Mot de passe" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.ConfirmPassword" class="form-label">Confirmer le mot de passe</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" type="password" placeholder="Confirmer le mot de passe" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-block">Créer un compte</button>
        </form>

        <div class="login-footer">
            <p>
                <a asp-page="./Login" class="login-link">Retour à la connexion</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}